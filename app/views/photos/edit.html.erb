<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Editing photo #<%= @photo.id %></h1>

      <%= form_tag(photo_url(@photo.id), :method => :patch) do %>
      <!-- <form action="/update_photo/<%#= @photo.id %>" class="form-horizontal"> -->
        <div class="form-group">
          <label for="source" class="col-sm-2 control-label">Source</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="source" name="source" placeholder="http://www.images.com/your_image.jpg" value="<%= @photo.source %>">
          </div>
        </div>
        <div class="form-group">
          <label for="caption" class="col-sm-2 control-label">Caption</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="caption" name="caption" placeholder="caption for image" value="<%= @photo.caption %>">
          </div>
        </div>

        <div class="form-group">
          <label for="caption" class="col-sm-2 control-label">user id</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="user_id" name="user_id" placeholder="user id" value="<%= @photo.user_id %>">
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Submit</button>
          </div>
        </div>
      <!-- </form> -->
      <% end %>
    </div>
  </div>
</div>
